@{
    ViewData["Title"] = "Submit Request";
}

<link rel="stylesheet" href="~/css/submitReq.css">
<script src="~/js/submitReq.js" defer></script>

<div class="container-fluid">
    <!-- header -->
    <div class="header">
        <img src="~/images/logo.png" alt="" class="img">
        <button class="btn1" id="dark">
            <i class="fas fa-light fa-moon" style="color: #43bcf9;" id="black"></i>
            <i class="fa-regular fa-sun inactive" id="bright" style="color: white"></i>
        </button>

    </div>
    <!-- header -->
    <!-- content -->
    <div class="content">
        <div class="content-header">
            <h2 style="font-weight: bold;" class="heading">I am a...</h2>
            <a href=@Url.Action("patientSite","Home")>
            <button class="btn2">
                <span>
                    <i class="fa-solid fa-less-than size" style="color: rgb(23, 200, 245)"></i>
                </span> <span class="size" style="color: rgb(23, 200, 245);">Back</span>
                </button>
            </a>
        </div>

        <div class="options d-flex flex-column align-items-center" style="width: 100%;">
            <a href=@Url.Action("patientReq","Home")><button type="button" class="mt-3 btn3 patient-btn"><span class="position">PATIENT</span></button></a>
            <a href=@Url.Action("familyFriendReq","Home")> <button type="button" class="mt-3 btn3 relation-btn"><span class="position">FAMILY/FRIEND</span></button></a>
            <a href=@Url.Action("concierge","Home")> <button type="button" class="mt-3 btn3 concierge-btn"><span class="position">CONCIERGE</span></button></a>
            <a href=@Url.Action("business","Home")> <button type="button" class="mt-3 btn3 partner-btn"><span class="position">BUSINESS PARTNERS</span></button></a>
        </div>
    </div>
    <!-- content -->
    <!-- footer -->
    <div>
        <div class="footer">
            <p class="para">Terms of Conditions &nbsp; | &nbsp; Privacy Policy</p>
        </div>
    </div>
    <!-- footer -->
</div>