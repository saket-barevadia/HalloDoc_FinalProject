 <script>
    

    // Assign Case

    function assignCase(id) {
        $.ajax({
            url: "/Admin/assignCase",
            type: "GET",
            data: { requestId: id },
            success: function (result) {
                $('#content').html(result);
                $('#newRequestModalAssign').modal('show');
                console.log(id);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }
   

    // Transfer Request
    function transferRequest(id) {

        $.ajax({
            url: "/Admin/transferRequest",
            type: "GET",
            data: { id: id },
            success: function (result) {
                $('#content').html(result);
                $('#newRequestModalTransfer').modal('show');
            },
            error: function () {
                alert('Error loading partial view');
            }
        })
    }




    // Clear Case
    function clearCase(id) {

        $.ajax({
            url: "/Admin/clearcase",
            type: "GET",
            data: { id: id },
            success: function (result) {
                $('#content').html(result);
                $('#clearCaseModel').modal('show');
            },
            error: function () {
                alert('Error loading partial view');
            }
        })
    }




    // Send Agreement
    function sendAgreement(id) {
        $.ajax({
            url: "/Admin/sendAgreement",
            type: "GET",
            data: { Requestid: id },
            success: function (result) {
                $('#content').html(result);
                $('#SendAgreementModal').modal('show');
            },
            error: function () {
                alert('Error loading partial view');
            }
        })
    }



    // Send Link
    function sendLink() {
        $.ajax({
            url: "/Admin/sendLink",
            type: "GET",
            success: function (result) {
                $('#content').html(result);
                $('#sendLinkModal').modal('show');
            },
            error: function () {
                alert('Error loading partial view');
            }
        })
    }

  </script> 


