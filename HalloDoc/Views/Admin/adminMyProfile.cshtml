<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>


<div class="tab-pane show fade" id="Myprofile-tab-pane" role="tabpanel" aria-labelledby="Myprofile-tab" tabindex="0">
    <div class="container-fluid">
        <div class="container">
            <div class=" mt-4 d-flex justify-content-between align-items-center">
                <h4>My Profile</h4>
                @if (Model.back == 1)
                {
                    <a asp-action="dashboard" asp-controller="Admin">
                        <button type="button" class="btn btn-outline-info">
                            <i class="fa-solid fa-less-than size"></i>
                            <span class="size">Back</span>
                        </button>
                    </a>
                }
                @if (Model.back == 2)
                {
                    <a asp-action="userAccess" asp-controller="Admin">
                        <button type="button" class="btn btn-outline-info">
                            <i class="fa-solid fa-less-than size"></i>
                            <span class="size">Back</span>
                        </button>
                    </a>
                }

            </div>

            <input type="hidden" id="flagflag" asp-for="@Model.back" />

            <div class="mx-3 my-4 shadow border rounded container">
                <form asp-action="adminMyProfile" asp-controller="Admin" class="" method="post">
                    <input asp-for="Flag" type="text" value="1" hidden/>
                    <input asp-for="back" type="text" hidden/>
                    <input type="text" asp-for="Adminid" hidden />
                    <input type="text" asp-for="AspnetUserId" hidden/>
                    <div class="mt-3">
                        <h4 class="my-4 pt-4">Account Information</h4>

                        <div class="row">
                           
                            <div class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating  ">
                                <input asp-for="Username" type="text" class="form-control " id="floatingInputFirst" placeholder="User Name"
                                     disabled aria-label="User Name">
                                <label class="ms-2 " for="floatingInputUsername">User Name</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div style="position: relative;"
                                class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating ">
                                <input asp-for="Password" type="password" class="form-control inputs" placeholder="Password"
                                    id="exampleInputPassword1" />
                                <label for="exampleInputPassword1" class=" ms-2 innertext small">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <button class="btn show-password" style="right: 15px;position: absolute;top: 18%;"
                                    type="button" onclick="togglePasswordVisibility()">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                                <select class="form-select form-control " disabled id="Status">
                                    <option value="1" selected>Active</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                                <label for="Status" class="ms-2 text-wrap small text-secondary">Status</label>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                                <select class="form-select form-control" disabled id="Role">
                                    <option value="1" selected>Master Admin</option>
                                    <option value="2">Admin</option>
                                    <option value="3">Provider</option>
                                </select>
                                <label for="Role" class="ms-2 text-wrap small text-secondary">Role</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" id="ResetPassword"
                                class="btn btn-outline-info">Reset Password</button>
                        </div>

                    </div>
                    </form>




                    <form asp-action="adminMyProfile" asp-controller="Admin" class="" method="post">
                    <input asp-for="back" type="text" hidden />
                    <input asp-for="Flag" type="text" value="2" hidden/>
                    <input type="text" asp-for="Adminid" hidden />
                    <input type="text" asp-for="AspnetUserId" hidden />
                    <div class="pt-4">
                        <h4 class="mb-4">Administrator Information</h4>
                        <div class="row mb-3">
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                                <input asp-for="Firstname" type="text" class="d1class form-control " id="floatingInputFirst"
                                    placeholder="First Name" aria-label="First Name">
                                <label class="ms-2 " for="floatingInputFirst">First Name</label>
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                                <input asp-for="Lastname" type="text" class="d1class form-control " id="floatingInputLast"
                                    placeholder="Last Name" aria-label="Last Name">
                                <label class="ms-2  " for="floatingInputLast">Last Name</label>
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="Email" type="email" class="d1class form-control " id="floatingInputemail"
                                    placeholder="Email" aria-label="Email" readonly>
                                <label class="ms-2 " for="floatingInputemail">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="ConfirmEmail" type="email" class="d1class form-control " id="floatingInputConfirmEmail"
                                    placeholder="ConfirmEmail" aria-label="ConfirmEmail">
                                <label class="ms-2 " for="floatingInputConfirmEmail">Confirm Email</label>
                                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 d-flex flex-column">
                                <input asp-for="Mobile" id="phone" class="d1class form-control country" placeholder="" aria-label="Contact" type="tel">
                             
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                            <div class="d-flex col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <button class="btn border d-flex align-items-center w-100 regionbtn d1class" type="button" style="height:58px" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select Region
                                </button>
                                <div class="dropdown-menu d1class">
                                    @if (Model.adminregionTables is not null && Model.adminregionTables.Count > 0)
                                    {
                                        @foreach (var region in Model.adminregionTables)
                                        {
                                            <div class="dropdown-item">
                                                <input type="checkbox" @(region.ExistsInTable ? "checked" : "") name="adminRegions" id="@region.Regionid" value="@region.Regionid" class="region-checkbox me-1">
                                                <label for="@region.Regionid">@region.Name</label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mt-3 mb-3">
                            <button type="button" id="editBtn" class="btn btn-info text-white EditBtn"
                                onclick="enableFields()">Edit </button>

                            <button type="submit" id="submitBtn" class="btn btn-info text-white EditBtn">Save</button>

                            <button type="button" id="cancelBtn" class="btn btn-outline-info EditBtn"
                                onclick="disableFields()">Cancel</button>
                        </div>
                    </div>
                    </form>


                    <form asp-action="adminMyProfile" asp-controller="Admin" class="" method="post">
                    <input asp-for="Flag" type="text" value="3" hidden/>
                    <input asp-for="back" type="text" hidden />
                    <input asp-for="Email" type="email" hidden>
                    <input type="text" asp-for="Adminid" hidden />
                    <input type="text" asp-for="AspnetUserId" hidden />
                    <div class="pt-4">
                        <h4 class="mb-4">Mailing And Billing Information</h4>
                        <div class="row mb-3">
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="Address1" type="text" class="dclass form-control " id="floatingInputAddress1"
                                    placeholder="Address1" aria-label="Address1">
                                <label class="ms-2 " for="floatingInputAddress1">Address1</label>
                                <span asp-validation-for="Address1" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="Address2" type="text" class="dclass form-control " id="floatingInputAddress2"
                                    placeholder="Address2" aria-label="Address2">
                                <label class="ms-2 " for="floatingInputAddress2">Address2</label>
                                <span asp-validation-for="Address2" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="City" type="text" class="dclass form-control " id="floatingInputCity"
                                    placeholder="City" aria-label="City">
                                <label class="ms-2 " for="floatingInputCity">City</label>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <select asp-for="Regionid" value="@Model.Regionid" class=" form-select dclass" id="state" aria-label="Region">
                              
                                    @foreach (var obj in Model.Region)
                                    {
                                        <option value="@obj.Regionid">
                                            @obj.region
                                        </option>
                                    }
                                </select>
                                <label for="state" class="ms-2 ">State</label>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="Zip" type="text" class="dclass form-control " id="floatingInputZipCode"
                                    placeholder="Zip Code" aria-label="Zip Code">
                                <label class="ms-2  " for="floatingInputZipCode">Zip</label>
                                <span asp-validation-for="Zip" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 d-flex flex-column">
                                <input asp-for="Altphone" id="phone2" class="dclass form-control country" placeholder="" aria-label="Contact" type="tel">                              
                                <span asp-validation-for="Altphone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mb-3">
                            <button type="button" id="editBtn2" class="btn btn-info text-white EditBtn"
                                onclick="enableFields2()">Edit </button>

                            <button type="submit" id="submitBtn2" class="btn btn-info text-white EditBtn">Save</button>

                            <button type="button" id="cancelBtn2" class="btn btn-outline-info EditBtn"
                                onclick="disableFields2()">Cancel</button>
                        </div>
                    </div>
                    </form>
                </div>
            
        </div>
    </div>
</div>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }

<script>

    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    const phoneField = document.querySelector("#phone2");
    const phoneeInput = window.intlTelInput(phoneField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    function disableFields() {
        document.querySelectorAll('.d1class').forEach(function (element) {
            element.disabled = true;
        });
        // Hide the submit and cancel buttons, show the edit button
        document.getElementById('submitBtn').style.display = 'none';
        document.getElementById('cancelBtn').style.display = 'none';
        document.getElementById('editBtn').style.display = 'block';
    }

    function enableFields() {
        document.querySelectorAll('.d1class').forEach(function (element) {
            element.disabled = false;
        });
        // Show the submit and cancel buttons, hide the edit button
        document.getElementById('submitBtn').style.display = 'block';
        document.getElementById('cancelBtn').style.display = 'block';
        document.getElementById('editBtn').style.display = 'none';
    }
    disableFields();

    function disableFields2() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = true;
        });
        // Hide the submit and cancel buttons, show the edit button
        document.getElementById('submitBtn2').style.display = 'none';
        document.getElementById('cancelBtn2').style.display = 'none';
        document.getElementById('editBtn2').style.display = 'block';
    }

    function enableFields2() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = false;
        });
        // Show the submit and cancel buttons, hide the edit button
        document.getElementById('submitBtn2').style.display = 'block';
        document.getElementById('cancelBtn2').style.display = 'block';
        document.getElementById('editBtn2').style.display = 'none';
    }
    disableFields2();

    if (document.getElementById("flagflag").value == 1) {
        var dash = document.getElementById("home-tab");
        var providerLoc = document.getElementById("ProviderLocation-tab");
        var profile = document.getElementById("Myprofile-tab");
        var provider = document.getElementById("Providers-tab");
        var partner = document.getElementById("Partners-tab");
        var access = document.getElementById("Access-tab");
        var records = document.getElementById("Records-tab");

        dash.classList.remove("active");
        providerLoc.classList.remove("active");
        profile.classList.add("active");
        provider.classList.remove("active");
        partner.classList.remove("active");
        access.classList.remove("active");
        records.classList.remove("active");
    }

    if (document.getElementById("flagflag").value == 2) {
        var dash = document.getElementById("home-tab");
        var providerLoc = document.getElementById("ProviderLocation-tab");
        var profile = document.getElementById("Myprofile-tab");
        var provider = document.getElementById("Providers-tab");
        var partner = document.getElementById("Partners-tab");
        var access = document.getElementById("Access-tab");
        var records = document.getElementById("Records-tab");

        dash.classList.remove("active");
        providerLoc.classList.remove("active");
        profile.classList.remove("active");
        provider.classList.remove("active");
        partner.classList.remove("active");
        access.classList.add("active");
        records.classList.remove("active");
    }


</script>


